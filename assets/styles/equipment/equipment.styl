			.swiper-button-prev
				l vw(70)
				transform rotate(180deg)
			.swiper-button-next
				r auto
				l vw(140)
	&__swiperImgs
		w vw(400)
		h vw(400)
		opacity 0
		transition 0.6s opacity, 0.6s transform
		transition-delay 0.4s
		transform translateX(vw(60))
		&[visible]
			opacity 1
			transform translateX(0)
		&.swiper-container
			overflow visible
		.swiper-slide
			opacity 0.3
			transition 0.5s opacity
			bgc $white
			border-radius 50%
			overflow hidden
			&-active
				opacity 1
	// &__slide
	&__elem-img
		w 100%
	&__item
		h 100%
		dfv(, center)
		font-size vw(18)
		&:not(:last-child)
			mb vw(20)
	&__title
		font-size vw(50)
		line-height 1
		color $white
		font-weight 800
		mb vw(20)
	&__item
		color $white
	&__link
		mb vw(30)
		ml vw(5)
		padding vw(10) vw(20)
		border-radius vw(30)
		color $white
		// border 2px solid $orange
		bgc $orange
		cursor pointer
		transition 0.4s background-color
		&:hover
			bgc $orange-light
