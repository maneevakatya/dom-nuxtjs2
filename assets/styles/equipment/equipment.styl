.equipment
	pl vw(350)
	h 100vh
	position relative
	oh()
	&[visible]:before
		w 100%
	&[visible]:after
		opacity 0.3
	&:before
		content ''
		position absolute
		w 0%
		h 100%
		transition 0.8s width
		bgc $blue
		r 0
		t 0
	&:after
		content ''
		position absolute
		// z-index 4
		opacity 0
		w 100%
		h 100%
		t 0
		r 0
		transition 0.8s opacity
		transition-delay 0.4s
		background-image url(../../assets/img/bg.jpeg)
		background-size cover
		background-repeat no-repeat
		background-position center top

	.wrapper
		h 100%
		df(center, )
	&__content
		w 100%
		df(center, space-between)
	&__img
		position absolute
		z-index 9
		w vw(300)
		b vw(20)
		left vw(50)
		opacity 0
		transition 0.6s opacity, 0.6s transform
		transform translateX(vw(160))
		transition-delay 0.4s
		&[visible]
			opacity 1
			transform translateX(0)
	&__swiper
		position relative
		w vw(400)
		opacity 0
		transition 0.6s opacity, 0.6s transform
		transition-delay 0.4s
		transform translateY(vw(60))
		&[visible]
			opacity 1
			transform translateY(0)
		.swiper-pagination
			bottom auto!important
			t vw(10)
			w auto
			text-align left
			color $white
			font-weight 800
		&.swiper-container
				pt vw(50)
				overflow visible
			.swiper-slide
				h auto!important
				.equipment__item
					opacity 0
					transition 0.3s opacity
				&-active
					.equipment__item
						opacity 1
			.swiper-button-next,
			.swiper-button-prev
				w vw(50)
				h vw(50)
				top vw(10)
				b auto
				background-image none
				border-radius 50%
				background-size 70%
